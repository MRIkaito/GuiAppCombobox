<Window x:Class="GuiApp.ChronoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuiApp"
        mc:Ignorable="d"
        Title="ChronoWindow" Height="450" Width="800">
    <Grid>
        <Button Content="キャンセル" HorizontalAlignment="Left" Margin="10,301,0,0" VerticalAlignment="Top" Width="104" Height="47"/>
        <Button Content="リセット" HorizontalAlignment="Left" Margin="159,302,0,0" VerticalAlignment="Top" Width="104" Height="46"/>
        <Button Content="適用" HorizontalAlignment="Left" Margin="150,378,0,0" VerticalAlignment="Top" Width="104" Height="46"/>
        <Button Content="CSVファイル読込" x:Name ="CsvFileLoad" HorizontalAlignment="Left" Margin="62,76,0,0" VerticalAlignment="Top" Width="128" Height="42" Click="CsvButton_Click"/>
        <TextBox Text="{Binding Path=CsvContents, Mode=OneWay}" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="38,163,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="195" Height="68"/>
    </Grid>
</Window>
